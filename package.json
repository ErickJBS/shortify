{
  "name": "shortify",
  "version": "1.0.0",
  "description": "Simple URL shortener",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "transpile": "babel ./src --out-dir dist",
    "build": "npm-run-all clean transpile",
    "server": "node .",
    "prod": "npm-run-all build server",
    "dev": "npm-run-all build server",
    "start": "npm run prod",
    "start:dev": "nodemon",
    "test": "jasmine"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ErickJBS/shortify.git"
  },
  "author": "ErickJBS",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ErickJBS/shortify/issues"
  },
  "homepage": "https://github.com/ErickJBS/shortify#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/register": "^7.8.6",
    "jasmine": "^3.5.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ],
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  }
}
